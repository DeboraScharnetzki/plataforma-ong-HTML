<script>
const year=document.getElementById('year');year.textContent=new Date().getFullYear();
const menus={
  visitor:[{k:'home',t:'Início'},{k:'mission',t:'Missão, Visão e Valores'},{k:'history',t:'Histórico e Conquistas'},{k:'team',t:'Equipe e Estrutura'},{k:'transparency',t:'Relatórios de Transparência'}],
  projects:[{k:'list',t:'Projetos Sociais'},{k:'gallery',t:'Galeria de Mídia'},{k:'impact',t:'Indicadores e Resultados'},{k:'categories',t:'Categorias'}],
  volunteers:[{k:'portal',t:'Portal de Oportunidades'},{k:'apply',t:'Inscrição e Seleção'},{k:'area',t:'Área do Voluntário'},{k:'certificates',t:'Certificados Digitais'}],
  donations:[{k:'campaigns',t:'Campanhas de Arrecadação'},{k:'donate',t:'Doações On-line'},{k:'goals',t:'Metas e Progresso'},{k:'reports',t:'Prestação de Contas'}],
  communication:[{k:'blog',t:'Blog e Notícias'},{k:'newsletter',t:'Newsletter'},{k:'press',t:'Área de Imprensa'},{k:'documents',t:'Documentos Públicos'}]
}
const content=document.getElementById('content');
const menu=document.getElementById('menu');
let current='visitor';
function setRole(r){current=r;renderMenu();render('home');}
function renderMenu(){menu.innerHTML='';menus[current].forEach(m=>{const b=document.createElement('button');b.textContent=m.t;b.onclick=()=>render(m.k);menu.appendChild(b)})}
function render(view){content.innerHTML='';switch(view){
  case 'home':content.innerHTML=`<div class='card'><h1>Bem-vindo à Conecta Voluntário</h1><p>Somos uma organização sem fins lucrativos dedicada ao impacto social, transparência e voluntariado responsável.</p><img src='https://picsum.photos/1200/400?random=1' alt='banner institucional' style='width:100%;border-radius:8px;margin-top:8px;'/></div>`;break;
  case 'mission':content.innerHTML=`<div class='card'><h1>Missão, Visão e Valores</h1><p><strong>Missão:</strong> Promover conexões transformadoras entre pessoas e causas.</p><p><strong>Visão:</strong> Tornar-se referência em voluntariado colaborativo.</p><p><strong>Valores:</strong> Ética, Empatia, Inclusão, Transparência.</p></div>`;break;
  case 'history':content.innerHTML=`<div class='card'><h1>Histórico e Conquistas</h1><p>Desde 2015, realizamos mais de 200 projetos sociais, beneficiando mais de 10.000 pessoas em diversas comunidades.</p><img src='https://picsum.photos/800/300?random=2' alt='histórico'/></div>`;break;
  case 'team':content.innerHTML=`<div class='card'><h1>Equipe e Estrutura</h1><p>Nossa equipe multidisciplinar é composta por gestores, educadores e profissionais de tecnologia social.</p><div class='gallery'>${[1,2,3,4].map(i=>`<img src='https://picsum.photos/200/200?random=${i+10}' alt='membro da equipe'>`).join('')}</div></div>`;break;
  case 'transparency':content.innerHTML=`<div class='card'><h1>Relatórios de Transparência</h1><p>Confira os relatórios financeiros e de impacto social atualizados trimestralmente.</p><a href='#' class='btn link'>Baixar Relatório 2025 (PDF)</a></div>`;break;
  case 'list':content.innerHTML=`<div class='card'><h1>Projetos Sociais</h1><p>Listagem de projetos detalhados com impacto e voluntários envolvidos.</p></div>`;break;
  case 'gallery':content.innerHTML=`<div class='card'><h1>Galeria de Fotos e Vídeos</h1><div class='gallery'>${[1,2,3,4,5,6].map(i=>`<img src='https://picsum.photos/300/200?random=${i+20}' alt='projeto'>`).join('')}</div></div>`;break;
  case 'impact':content.innerHTML=`<div class='card'><h1>Indicadores de Impacto</h1><p>Projetos ativos: 24 | Voluntários: 150 | Recursos aplicados: R$ 320.000</p></div>`;break;
  case 'categories':content.innerHTML=`<div class='card'><h1>Categorias de Projetos</h1><ul><li>Educação</li><li>Saúde</li><li>Meio Ambiente</li><li>Inclusão Digital</li></ul></div>`;break;
  case 'portal':content.innerHTML=`<div class='card'><h1>Portal de Oportunidades</h1><p>Encontre vagas de voluntariado compatíveis com seu perfil.</p><img src='https://picsum.photos/800/300?random=30' alt='voluntariado'/></div>`;break;
  case 'apply':content.innerHTML=`<div class='card'><h1>Inscrição e Seleção</h1><form onsubmit='event.preventDefault();alert("Inscrição enviada!")'><input placeholder='Nome' required><input placeholder='E-mail' required type='email'><select><option>Selecione projeto</option><option>Educação</option><option>Saúde</option></select><button class='btn'>Enviar</button></form></div>`;break;
  case 'area':content.innerHTML=`<div class='card'><h1>Área do Voluntário</h1><p>Visualize histórico de participações e atividades.</p></div>`;break;
  case 'certificates':content.innerHTML=`<div class='card'><h1>Certificados Digitais</h1><p>Emita seu certificado de participação.</p><button class='btn'>Gerar Certificado</button></div>`;break;
  case 'campaigns':content.innerHTML=`<div class='card'><h1>Campanhas de Arrecadação</h1><p>Acompanhe campanhas ativas e contribua para as metas.</p><img src='https://picsum.photos/900/300?random=40' alt='campanha'/></div>`;break;
  case 'donate':content.innerHTML=`<div class='card'><h1>Doações On-line</h1><form onsubmit='event.preventDefault();alert("Doação registrada!")'><input type='number' min='5' placeholder='Valor (R$)' required><button class='btn'>Doar Agora</button></form></div>`;break;
  case 'goals':content.innerHTML=`<div class='card'><h1>Metas e Progresso</h1><p>Meta geral: R$ 500.000 | Arrecadado: R$ 320.000</p><progress max='500000' value='320000' style='width:100%'></progress></div>`;break;
  case 'reports':content.innerHTML=`<div class='card'><h1>Prestação de Contas</h1><p>Relatórios detalhados de aplicação de recursos.</p><a href='#' class='btn link'>Baixar Relatório Financeiro</a></div>`;break;
  case 'blog':content.innerHTML=`<div class='card'><h1>Blog e Notícias</h1><p>Últimas atualizações e conquistas.</p><article><h3>Nova Parceria Local</h3><p>Firmamos parceria com instituições de ensino para novos projetos.</p></article></div>`;break;
  case 'newsletter':content.innerHTML=`<div class='card'><h1>Newsletter</h1><p>Cadastre-se para receber novidades.</p><form onsubmit='event.preventDefault();alert("Inscrito!")'><input placeholder='Seu e-mail' type='email' required><button class='btn'>Inscrever</button></form></div>`;break;
  case 'press':content.innerHTML=`<div class='card'><h1>Área de Imprensa</h1><p>Comunicados oficiais e releases disponíveis.</p></div>`;break;
  case 'documents':content.innerHTML=`<div class='card'><h1>Documentos Públicos</h1><ul><li>Estatuto Social (PDF)</li><li>Certidões Negativas</li><li>Política de Privacidade</li></ul></div>`;break;
}}
document.getElementById('applyBtn').onclick=()=>{setRole(document.getElementById('roleSelect').value)};setRole('visitor');
</script>
</body>
</html>
